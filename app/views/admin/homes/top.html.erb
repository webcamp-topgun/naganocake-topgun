<div class="container text-left">
  <div class="row">
    <div class="col-10">
      <h1>注文履歴一覧</h1>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%-m/%-d %H:%M:%S"), admin_order_path(order.id) %></td>
            <td><%= "#{order.customer.last_name}#{order.customer.first_name}" %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_jp %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
  <div class="col-10 offset-5 text-center">
    <div class="pagination" style="font-size: 24px;">
      <%= paginate @orders %>
    </div>
  </div>
</div>