<div class="container justify-content-center">
  <div class="row mt-4">
    <div class="col-2 text-left">
      <h1 style="background-color: rgba(207, 247, 153, 1.0)">商品詳細</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <% if @item.image.attaced? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "200x200" %>
      <% end %>
    </div>

    <div class="col-8">
      <table class="table table-borderless table-sm">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.caption %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込み価格<br>
              （税抜き価格）
          </td>
          <td><%= "#{number_to_currency(@tax_include_price, unit: "", precision: 0)} (#{number_to_currency(@item.price, unit: "", precision: 0)}円)" %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <% if @item.is_active %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-danger">販売停止中</td>
          <% end %>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>