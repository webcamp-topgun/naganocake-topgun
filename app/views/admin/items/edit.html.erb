<div class="container justify-content-center">
  <div class="row mt-4">
    <div class="col-2 text-center">
      <h1 style="background-color: rgba(207, 247, 153, 1.0)">商品編集</h1>
    </div>
  </div>
 
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
   <div class="row mt-3">
    <div class="col-6 text-left offset-1">
          <%= f.label :商品画像, style: "width: 80px;" %>
          <%= f.file_field :image, accept: "image/*", include_blank: "ファイルを選択" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6 text-left offset-1">
          <%= f.label :商品名, style: "width: 80px;" %>
          <%= f.text_field :name, style: "width: 28ch;" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6 text-left offset-1">
        <div class="item-caption", style="display: flex; align-items: baseline;">
          <%= f.label :商品説明, style: "width: 85px;" %>
          <%= f.text_area :caption, style: "width: 28ch; height: 8em;" %>
        </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6 text-left offset-1">
        <div class="item-genre" >
          <%= f.label :ジャンル, style: "width: 80px;" %>
          <%= f.select :genre_id, options_for_select(Genre.all.map{ |g| [g.name, g.id] }, selected: @item.genre.id), { include_blank: "選択してください"}, {style: "width: 28ch;"} %>
        </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6 text-left offset-1">
        <div class="item-price" >
          <%= f.label :税抜価格, style: "width: 80px;" %>
          <%= f.text_field :price, style: "width: 28ch;" %>円
        </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-6 text-left offset-1">
        <div class="item-status" >
          <%= f.label :is_active, '販売ステータス' %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, '販売中', {value: :true} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, '販売停止中', {value: :false} %>
        </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>

