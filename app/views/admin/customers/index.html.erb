<div class="container">
  <div class="row">
    <h3 class="bg-secondary">会員一覧</h3>
  </div>


  <div class="row">
    <table class="table table-bordered">
      <thead>
          <tr>
            <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
          </tr>
      </thead>
        <tbody>
       <% @customers.each do |customer| %>
      <tr>
         <td><%= customer.id %></td>
         <td><%= link_to admin_customer_path(customer.id) do %>
             <%= customer.last_name + customer.first_name %>
             <% end %>
         </td>

         <td><%= customer.email %></td>

         <td>
          <% if customer.is_active %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
      <% end %>
        </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>



