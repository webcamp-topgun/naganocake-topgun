<h2>会員一覧</h2>

<% @customers.each do |customer| %>
  <div>
    <table>
      <tr>
        <td>会員ID</td><td>氏名</td><td>メールアドレス</td><td>ステータス</td>
      </tr>

      <tr>
        <td><%= customer.id %></td><td><%= customer.last_name %><%= customer.first_name %></td><td><%= customer.email %></td>
        <td>
          <% if customer.is_active %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>

    </table>


  </div>
<% end %>



