<div class="container">
  <div class="row">
    <h3 style="background-color: rgba(60, 60, 60, 0.3)"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  </div>

  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th style="width: 20%;">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <th style="width: 20%;">氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <th style="width: 20%;">カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th style="width: 20%;">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th style="width: 20%;">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th style="width: 20%;">電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th style="width: 20%;">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th style="width: 20%;">会員ステータス</th>
            <td>
              <% if @customer.is_active %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-danger">退会</span>
              <% end %>
            </td>
      </tr>
          </table>
</div>

  <div class="row">
    <div class="col-2 offset-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
    </div>
    <div class="col-3 text-left">
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
    </div>
  </div>

  </div>







