

<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>

<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>

  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>

  <tr>
    <td>カナ</td>
    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
    <tr>
    <td>会員ステータス</td>
        <td>
          <% if @customer.is_active %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
  </tr>
  <tr>
    <td></td>
    <td>
      <h2>配送先</h2>
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
    </td>
      <td>
        <h2>注文一覧</h2>
        <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
      </td>
  </tr>
</table>









