<div class="container">
  <div class="row">
    <h3 class="bg-secondary"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, size:50 %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, "true" %>
            <%= f.label :is_active_true, "有効",{value: :true} %>
            <%= f.radio_button :is_active, "false" %>
            <%= f.label :is_active_false, "退会",{value: :false} %>
          </td>
        </tr>
   </table>
  </div>

   <div class="row">
        <%= f.submit '変更を保存',class:"btn btn-success" %>
        <% end %>
   </div>
</div>
