<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <table>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active_true, "有効",{value: :true} %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active_false, "退会",{value: :false} %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit '変更を保存',class:"btn btn-success" %></td>
    </tr>
  </table>
<% end %>
