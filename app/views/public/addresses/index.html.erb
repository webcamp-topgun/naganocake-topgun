<h2>配達先登録／一覧</h2>

<%= form_with model: @address do |f| %>
<table>
  <tr>
        <td>
          <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
        </td>
        <td>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
          </div>
        </td>
  </tr>
  <tr>
          <td>
            <div class="field">
            <%= f.label :住所 %>
          </td>
          <td>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 500px;" %>
          </div>
          </td>
  </tr>
  <tr>
      <td><div class="field">
          <%= f.label :宛名 %>
      </td>
      <td>
          <%= f.text_field :name, placeholder: "令和道子"%>
        </div>
      </td>
      <td>
          <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
      </td>
  </tr>
  </table>
  <% end %>

<table>
  <% @addresses.each do |address| %>
  <tr>
    <td>郵便番号</td>
    <td><%= address.postal_code %></td>
    
  </tr>
  <% end %>
</table>
