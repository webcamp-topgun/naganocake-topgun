<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<table>
  <tr>
      <td><p>名前</p></td>
      <td><div class="field">
          <%= f.label :"(姓)" %>
          <%= f.text_field :last_name, placeholder: "令和"%>
        </div>
      </td>
      <td><div class="field">
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, placeholder: "道子" %>
        </div>
      </td>
  </tr>
  <tr>
      <td><p>フリガナ</p></td>
        <td><div class="field">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
        </div>
        </td>
        <td><div class="field">
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>
        </td>
  </tr>

  <tr>
        <td>
          <div class="field">
          <%= f.label :メールアドレス %>
        </td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
          </div>
        </td>
  </tr>
  <tr>
        <td>
          <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
        </td>
        <td>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
          </div>
        </td>
  </tr>
  <tr>
          <td>
            <div class="field">
            <%= f.label :住所 %>
          </td>
          <td>
            <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 500px;" %>
          </div>
          </td>
  </tr>
  <tr>
          <td>
            <div class="field">
            <%= f.label :電話番号（ハイフンなし） %>
          </td>
          <td>
            <%= f.text_field :phone_number, placeholder: "0000000000" %>
          </div>
          </td>
  </tr>
  <tr>
        <td>
          <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </td>
  </tr>
  <tr>
        <td>
          <div class="field">
          <%= f.label :password_confirmation %>
        </td>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </td>
  </tr>
  <tr>
        <td></td>
        <td>
          <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </td>
  </tr>
  </table>
  <% end %>

<%= render "public/shared/links" %>
