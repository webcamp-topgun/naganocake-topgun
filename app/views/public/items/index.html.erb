<h1>
  商品一覧
  <span style="font-size: 60%;">全<%= @items.count %>件</span>
</h1>

<div class="items-container">
  <% @items.each do |item| %>
    <div class="item">
      <%= link_to item_path(item.id) do %>
        <% if item.image.attaced? %>
          <%= image_tag item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "200x200" %>
        <% end %>
      <% end %>
      <div class="item-details">
        <div><%= item.name %></div>
        <div><%= number_to_currency((item.price * 1.1).floor, unit: "￥", precision: 0) %></div>
      </div>
    </div>
  <% end %>
</div>

<div class="paginate">
  <%= paginate @items %>
</div>


<style>
  .items-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .paginate {
     display: flex;
    justify-content: center;
    font-size: 24px;
  }

  .item {
    flex-basis: 20%;
    margin: 10px;
  }
</style>