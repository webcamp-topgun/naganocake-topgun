<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <p>
      ショッピングカート
      <%= link_to 'カートを空にする', cart_items_path, class: "btn btn-sm btn-danger" %>
      </p>

      <table class='table table-hover table-inverse'>
        <tr>
          <th>
          商品名
          </th>
          <th>
          単価（税込）
          </th>
          <th>
          数量
          </th>
          <th>
          小計
          </th>
          <th>
          </th>
        </tr>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
          <%= cart_item.item.name %>
          </td>
          <td>
          </td>
          <td>
          </td>
          <td>
          <%= form_with model: cart_item, method: :patch do |f| %>
          <%= f.select :amount, *[1..9] %>
          <% end %>
          </td>
          <td>
          <%= link_to '削除する', @cart_items,method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
       <% end %>
      </table>
     <%= link_to '買い物を続ける', root_path, class: "btn btn-sm btn-primary" %>
     <table>
       <tr>
         <th>
         合計金額
         </th>
         <th>

         </th>
       </tr>
     </table>
     <br>
     <%= link_to '情報入力に進む', new_order_path, class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>