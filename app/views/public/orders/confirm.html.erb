<h1>注文情報確認</h1>
<%= form_with model: @order,method: :post,url:orders_path do |f| %>

<table>
  <tr>
    <th>
      商品名
    </th>
    <th>
      単価（税込）
    </th>
    <th>
      数量
    </th>
    <th>
      小計
    </th>
  </tr>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td>
      <%= cart_item.item.name %>
    </td>
    <td>
      <%= cart_item.item.with_tax_price %>
    </td>
    <td>
      <%= cart_item.amount %>
    </td>
    <td>
      <%= cart_item.subtotal %>
    </td>
  </tr>
  <% end %>
</table>


<table>
  <tr>
    <th>
      送料
    </th>
    <th>
      <%= @order.postage %>
    </th>
  </tr>
  <tr>
    <th>
      商品合計
    </th>
    <td>
      
    </td>
  </tr>
  <tr>
    <th>
      請求金額
    </th>
    <td>
    </td>
  </tr>
</table>
<h3>支払方法</h3>
   <%= @payment_method %>
<h3>お届け先</h3>
   <%= @address %>
  <%= f.submit "注文を確定する", class: "btn btn-success btn-sm" %>
<% end %>