<div class="container">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <h1 class=" bg-secondary">注文履歴一覧</h1>
    </div>
    <div class="col-lg-8"></div>
  </div>


  <div class="row">
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>
            注文日
          </th>
          <th>
            配送先
          </th>
          <th>
            注文商品
          </th>
          <th>
            支払金額
          </th>
          <th>
            ステータス
          </th>
          <th>
            注文詳細
          </th>
        <tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.updated_at.strftime("%Y/%-m/%-d") %>
          </td>
          <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td>
            <%= number_to_currency(order.total_payment, unit: "", precision: 0) + "円" %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
          <td>
            <%= link_to '表示する', order_path(order.id), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
