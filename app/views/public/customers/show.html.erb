<div class="container">
<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<div class="row mb-3">
  <div class="col-2 text-left">
    <h3 style="background-color: rgba(60, 60, 60, 0.3)">マイページ</h3>
  </div>
</div>

<div class="row mb-3">
  <div class="col-2">
    <h3 class="font-weight-bolder">登録情報</h3>
  </div>
  <div class="col-10">
    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success"%>
  </div>
</div>

<div class="row">
  <div class="col-10">
  <table class="table table-bordered">
    <tr>
      <td style="width: 30%;">氏名</td>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>
    <tr>
      <td style="width: 30%;">カナ</td>
      <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td style="width: 30%;">郵便番号</td>
      <td><%= @addresses.postal_code %></td>
    </tr>
    <tr>
      <td style="width: 30%;">住所</td>
      <td><%= @addresses.address %></td>
    </tr>
    <tr>
      <td style="width: 30%;">電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td style="width: 30%;">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  </div>
</div>


<div class="row mt-3 mb-3">
  <div class="col-2">
    <h3 class="font-weight-bolder">配送先</h3>
  </div>
  <div class="col-10">
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-2">
    <h3 class="font-weight-bolder">注文一覧</h3>
  </div>
  <div class="col-10">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>

</div>

