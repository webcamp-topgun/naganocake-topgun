<div class="container">
  <div class="row">
    <div class="col-3 offset-1 text-center mt-3">
      <h3 style="background-color: rgba(60, 60, 60, 0.3)">会員情報編集</h3>
    </div>
  </div>


  <%= form_with model: @customer, url: customers_information_path(@customer), method: :patch do |f| %>
    <div class="row mb-2">
      <div class="col-3">
        氏名
      </div>
      <div class="col-3">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-6">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        フリガナ
      </div>
      <div class="col-3">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        郵便番号
      </div>
      <div class="col-3">
        <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        住所
      </div>
      <div class="col-6">
        <%= f.text_field :address, style: "width: 100%" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        電話番号
      </div>
      <div class="col-3">
        <%= f.text_field :phone_number %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-3">
        メールアドレス
      </div>
      <div class="col-3">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-2 offset-3">
        <%= f.submit '編集内容を保存',class:"btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-9 text-right">
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
    </div>
  </div>

</div>

